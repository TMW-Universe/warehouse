generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model FileBlob {
  id String @id @default(uuid())

  name      String
  extension String
  size      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  File   File   @relation(fields: [fileId], references: [id])
  fileId String

  @@index([createdAt])
}

model File {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  Container   Container  @relation(fields: [containerId], references: [id])
  containerId String
  FileBlob    FileBlob[]

  @@index([deletedAt])
}

model Container {
  id   String @id @default(uuid())
  name String @unique

  File        File[]
  Warehouse   Warehouse @relation("container", fields: [warehouseId], references: [id])
  warehouseId String

  DefaultWarehouse Warehouse[] @relation("default-container")
}

model Warehouse {
  id   String @id @default(uuid())
  name String @unique

  Container Container[] @relation("container")

  DefaultContainer   Container? @relation("default-container", fields: [defaultContainerId], references: [id])
  defaultContainerId String?
}
